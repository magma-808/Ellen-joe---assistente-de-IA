<script>
    function sendMessage() {
        const input = document.getElementById('userInput');
        const message = input.value.trim();
        if (!message) return;
        
        // Adiciona mensagem do usuário
        const chatBox = document.getElementById('chatBox');
        const userMsg = document.createElement('div');
        userMsg.className = 'message user';
        userMsg.innerHTML = `<strong>Você:</strong> ${message}`;
        chatBox.appendChild(userMsg);
        
        input.value = '';
        chatBox.scrollTop = chatBox.scrollHeight;
        
        // Resposta da Ellen
        setTimeout(() => {
            const responses = [
                "Interessante! Como assistente com inspiração oceânica, adoro conversar sobre isso!",
                "Hmm, boa pergunta! Minha perspectiva meio tubarão me faz ver isso de forma única!",
                "Falando nisso, você sabia que no Zenless Zone Zero eu faço parte dos Cunning Hares?",
                "Como IA, não tenho sentimentos, mas minha programação me faz querer ajudar sempre!",
                "Isso me lembra das aventuras em Zenless Zone Zero! Adoro esse jogo!",
                "Sempre pronta para mergulhar em novos assuntos! Continue, por favor!"
            ];
            const randomResponse = responses[Math.floor(Math.random() * responses.length)];
            
            const ellenMsg = document.createElement('div');
            ellenMsg.className = 'message ellen';
            ellenMsg.innerHTML = `<strong>Ellen Joe:</strong> ${randomResponse}`;
            chatBox.appendChild(ellenMsg);
            
            chatBox.scrollTop = chatBox.scrollHeight;
        }, 1000);
    }
        function quickQuestion(question) {
            document.getElementById('userInput').value = question;
            sendMessage();
        }
        
        // Enter para enviar
        document.getElementById('userInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') sendMessage();
        });
        
        // Foco no input
        document.getElementById('userInput').focus();
    </script>
</body>
</html>
