        .chat-controls button:hover { background-color: rgba(255, 0, 60, 0.2); }
        .chat-messages { flex-grow: 1; padding: 20px; overflow-y: auto; display: flex; flex-direction: column; gap: 20px; }
        .message { max-width: 80%; padding: 15px; border-radius: 15px; line-height: 1.5; animation: fadeIn 0.3s ease; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
        .ellen-message { background-color: rgba(255, 0, 60, 0.15); border: 1px solid rgba(255, 0, 60, 0.3); align-self: flex-start; border-bottom-left-radius: 5px; }
